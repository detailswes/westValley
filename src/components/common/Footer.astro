---
import { Image } from "astro:assets";
import Logo2 from "@/assets/images/logo (2).svg";
import FooterBg from "../assets/images/footer-bg.svg";
---

<footer
  class="footer-bg bg-[rgb(85,54,101)] bg-center bg-contain bg-no-repeat relative overflow-hidden"
>
  <div
    class="p-[18px] text-white z-50 flex flex-col items-center justify-center text-center"
  >
    <div class="w-full sm:max-w-60 flex justify-center">
      <a href="/">
        <Image src={Logo2} alt="white-logo" class="md:w-[135px] w-32" />
      </a>
    </div>
    <p class="mt-2 text-sm md:text-base">
      123 Wellness Street, Suite 456, Springfield
    </p>
    <p class="text-sm md:text-base">United Kingdom</p>
    <p class="mt-2 text-sm md:text-base">
      Copyright Â© 2025 <a href="/" class="text-[#FBBC05]">West Valley Detox</a>
      | All Rights Reserved
    </p>
  </div>
</footer>

<style>
  .footer-bg {
    background-image: url("{FooterBg}");
  }
</style>
