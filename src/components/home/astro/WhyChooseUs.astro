---
import { whyChooseUsData } from "@/data/whyChooseUsData";
import { Image } from "astro:assets";
import GetHelpNowBtn from "./GetHelpNowBtn.astro";

const { privacyIcon, careIcon, hospitalityIcon, whyChooseImage } = Astro.props;
---

<section class="why_choose_us pt-16 md:pt-[84px] pb-16 md:pb-32 px-4">
  <div class="w-full max-w-7xl mx-auto">
    <h6 class="text-[22px] font-semibold text-black">
      {whyChooseUsData.sectionTitle}
    </h6>
    <h2
      class="w-full text-black font-medium text-4xl md:text-[42px] mt-2 font-Frank leading-[42px] md:leading-[54px]"
    >
      {whyChooseUsData.heading}
    </h2>

    <div
      class="flex mt-[58px] items-start justify-between flex-col md:flex-row md:items-center gap-16"
    >
      <div>
        <div class="flex gap-5 items-start">
          <Image src={privacyIcon} alt={whyChooseUsData.privacy.iconAlt} />
          <div>
            <h6 class="text-[22px] text-black font-semibold">
              {whyChooseUsData.privacy.title}
            </h6>
            <p class="text-black leading-[25px]">
              {whyChooseUsData.privacy.description}
            </p>
          </div>
        </div>

        <div class="flex gap-5 items-start mt-7">
          <Image src={careIcon} alt={whyChooseUsData.tailoredCare.iconAlt} />
          <div>
            <h6 class="text-[22px] text-black font-semibold">
              {whyChooseUsData.tailoredCare.title}
            </h6>
            <p class="text-black leading-[25px]">
              {whyChooseUsData.tailoredCare.description}
            </p>
          </div>
        </div>

        <div class="flex gap-5 items-start mt-7">
          <Image
            src={hospitalityIcon}
            alt={whyChooseUsData.hospitality.iconAlt}
          />
          <div>
            <h6 class="text-[22px] text-black font-semibold">
              {whyChooseUsData.hospitality.title}
            </h6>
            <p class="text-black leading-[25px]">
              {whyChooseUsData.hospitality.description}
            </p>
          </div>
        </div>

        <div class="mt-12">
          <GetHelpNowBtn />
        </div>
      </div>

      <div class="w-full md:max-w-[730px]">
        <Image src={whyChooseImage} alt={whyChooseUsData.featureImageAlt} />
      </div>
    </div>
  </div>
</section>

<style>
  .why_choose_us {
    background: linear-gradient(180deg, #f7f7fb 0%, #f7f7fb 44%, #f2e9c6 81%);
  }
</style>
