---
import scriptCertified from "@/assets/images/voice.webp";
import carfCertified from "@/assets/images/coinn.webp";
import googleImage from "@/assets/images/google.svg";
import starIcon from "@/assets/icons/star.svg";
import { Image } from "astro:assets";
---

<div
  class="flex gap-4 bg-[rgba(255,255,255,0.40)] md:gap-10 px-6 md:px-[36px] py-5 rounded-[6px] mt-[14px] md:max-w-[454px]"
>
  <Image src={scriptCertified} alt="script-certified" loading="eager" class="h-14 w-auto"  />
  <Image src={carfCertified} alt="carf-certified" loading="eager" class="h-14 w-auto" />
  <div class="flex items-center gap-[6px]">
    <Image src={googleImage} alt="google-reviews" loading="eager" />
    <div>
      <p class="text-xs text-black">124+ 5-Star Reviews</p>
     <div class="flex flex-col items-start gap-[5px] ">
  <div class="flex">
    {Array.from({ length: 5 }).map(() => (
      <Image src={starIcon} alt="rating-star" loading="eager" />
    ))}
  </div>
  <p class="text-[15px] text-sm text-black">Reviews</p>
</div>

    </div>
  </div>
</div>
